Var
   A, B, C: real
   ope:caracter
procedimento calcular
inicio
   escolha ope
         caso "1"
            C <- A + B
         caso "2"
            C <- A - B
         caso "3"
            C <- A * B
      fimescolha
fimprocedimento

Inicio

escreva("Informe a operação: (1 Somar, 2 Subtrair, 3 Multiplicar )")
   leia(ope)


    caso 1
A: vetor[0..4, 0..4] de inteiro
B: vetor[0..4, 0..4] de inteiro
C: vetor[0..4, 0..4] de inteiro
linha, coluna : inteiro



para linha de 0 ate 4 faca
  para coluna de 0 ate 4 faca
Escreval ("Digite os valores: ")
      leia (A[coluna,linha])
fimpara
fimpara
para linha de 0 ate 4 faca
  para coluna de 0 ate 4 faca
Escreval ("Digite os valores: ")
      leia (B[coluna, linha])
fimpara
fimpara

para linha de 0 ate 4 faca
para coluna de 0 ate 4 faca

C[linha,coluna] <- A[linha,coluna] + B[linha,coluna]

fimpara
fimpara

      escreval("Conteúdo da matriz A:")
para linha de 0 ate 4 faca
   para coluna de 0 ate 4 faca
      se coluna < 4 entao
         escreva (A[linha,coluna])
      senao
         escreval (A[linha,coluna])
      fimse
   fimpara
fimpara
escreval("Conteúdo da matriz B:")
para linha de 0 ate 4 faca
   para coluna de 0 ate 4 faca
      se coluna < 4 entao
         escreva (B[linha,coluna])
      senao
         escreval (B[linha,coluna])
      fimse
   fimpara
fimpara
escreval("A soma das matrizes A e B é:")
para linha de 0 ate 4 faca
   para coluna de 0 ate 4 faca
      se coluna < 4 entao
         escreva (C[linha,coluna])
      senao
         escreval (C[linha,coluna])
      fimse
   fimpara
fimpara

